#include<iostream>
using namespace std;
 
int32_t main()
{
    long long n;
    long long m;
    cin>>n>>m;
    long long ini=1;
    long long ans=0;
    
    for(int i=0; i<m; i++)
    {
        long long x;
        cin>>x;
        ans+=(x-ini+n)%n;
        ini=x;                   
    }
  cout<<ans;  
 return 0;   
}
